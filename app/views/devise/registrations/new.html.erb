<div class = "row">
  <div class="col-md-6 col-md-offset-3 text-center">
      <% if params[:plan] =='2' %>
        <h1>Pro Account</h1>
        <p> Pay $10 per month for free shopping trips to our garden</p>
      <% else %>
        <h1>Basic Account</h1>
        <p>Sign up for free and eat well</p>
      <% end %>
  </div>
  <div class="col-md-6 col-md-offset-3">
    
    <div class="well">
      <h2>Sign up</h2>
      <% if params[:plan] == '2' %>
        <%= render "pro_form" %>
      <% else %>
        <%= render "basic_form" %>
      <% end %>
  
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
